<div class="modal fade" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-modal-target="modal" data-lock-actions-target="modal" data-iq-actions-target="modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">{{ 'title.sending' | trans }}</h5>
			</div>
			<div class="modal-body d-flex flex-column justify-content-center align-items-center">
				<img src="{{ asset('build/images/spinner.gif') }}" class="fill" data-modal-target="spinner" data-lock-actions-target="spinner" data-iq-actions-target="spinner">
				<div class="alert alert-secondary text-center" data-modal-target="resultText" data-lock-actions-target="resultText" data-iq-actions-target="resultText">{{ 'message.thisCanTakeSomeTime' | trans }}</div>
				<div class="col-lg-auto">
					<button class="btn btn-primary mt-1 d-hidden" type='button' data-bs-dismiss="modal" aria-label="Close">{{ 'btn.close' | trans }}</button>
				</div>
			</div>
		</div>
	</div>
</div>
